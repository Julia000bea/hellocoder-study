generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  password    String
  totalXp     Int           @default(0)
  streakDays  Int           @default(0)
  followers   Int           @default(0)
  following   Int           @default(0)
  createdAt   DateTime      @default(now())

  activities     Activity[]
  reviews        Review[]
  notifications  Notification[]
  pomodoros      Pomodoro[]       // ✅ RELAÇÃO CORRETA
}

model Activity {
  id        Int      @id @default(autoincrement())
  title     String
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Review {
  id        Int      @id @default(autoincrement())
  content   String
  rating    Int
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Pomodoro {
  id         Int      @id @default(autoincrement())
  focusTime  Int      // minutos focados
  breakTime  Int      // minutos de pausa
  cycles     Int      // quantidade de ciclos
  createdAt  DateTime @default(now())

  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}
